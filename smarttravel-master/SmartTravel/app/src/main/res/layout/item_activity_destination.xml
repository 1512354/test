<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:layout_width="match_parent" android:layout_height="150dp"
        android:id="@+id/imvHinh"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/imvHinh"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:text="adgerfrg"
        android:layout_marginStart="16dp"
        />
    <ImageView android:layout_width="20dp" android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:id="@+id/imvStar"
        android:layout_marginTop="8dp"
        android:src="@drawable/star"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="4.8"
        app:layout_constraintStart_toEndOf="@id/imvStar"
        app:layout_constraintTop_toTopOf="@id/imvStar"
        android:id="@+id/tvNum"
        app:layout_constraintBottom_toBottomOf="@id/imvStar"
        android:layout_marginStart="4dp"
        android:textColor="#F3C246"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="(31.5959 reviews)"
        android:textColor="#ffff"
        app:layout_constraintStart_toEndOf="@id/tvNum"
        app:layout_constraintTop_toTopOf="@id/imvStar"
        app:layout_constraintBottom_toBottomOf="@id/imvStar"
        android:layout_marginStart="4dp"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Price: 100 dolar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvStar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="#ffff"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Available Today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvStar"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="#ffff"
        />
</android.support.constraint.ConstraintLayout>
