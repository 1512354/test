<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="15dp"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#c8b5f6"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imvUserCart"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:id="@+id/parentLinearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttitleCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:textStyle="bold"
                    android:text="Safari World Ticket in Bangkok"
                    android:textColor="#0d0b0d" />

                <TextView
                    android:id="@+id/txtDateCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="22 Nov 2019" />

                <TextView
                    android:id="@+id/txtQuantityCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Quantity: 1" />

                <TextView
                    android:id="@+id/txtTypeCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Type: Adult" />


            </LinearLayout>

            <CheckBox
                android:id="@+id/rdbCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:checked="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/linearlayout1"
            android:id="@+id/linearlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Edit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/txtEditCart"
                android:textSize="20sp"
                android:textColor="#330cf7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Delete"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/txtDeleteCart"
                android:textSize="20sp"
                android:textColor="#330cf7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtPriceCart"
                android:text="Ä‘ 1,250,000"
                android:textColor="#1e13f5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>