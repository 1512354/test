<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Header-->
            <FrameLayout
                android:id="@+id/relHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgHeader"
                    android:scaleType="centerCrop"
                    android:background="#a850f0"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
                <!--android:src="@drawable/seoul"-->
                <ImageView
                    android:id="@+id/imgBack"
                    android:src="@drawable/leftarrow"
                    android:layout_marginLeft="20dp"
                    android:layout_width="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="32dp" />
                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/shoppingcart" />

            </FrameLayout>

            <!--Body-->
            <RelativeLayout
                android:id="@+id/relBody"
                android:layout_below="@+id/relHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_marginTop="20dp"
                    android:text="Universal Studios Singapore Ticket"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:text="Ticket: Ä‘ 1,100,500"
                    android:textStyle="bold"
                    android:textColor="#500be4"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/txtIntro"
                    android:textSize="20sp"
                    android:layout_below="@+id/txtPrice"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtPackage"
                    android:layout_below="@+id/txtIntro"
                    android:text="Package Options"
                    android:textSize="24sp"
                    android:textColor="#500be4"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtInclusiveOf"
                    android:layout_below="@+id/txtPackage"
                    android:text="Inclusive Of:"
                    android:textSize="22sp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtInclusiveOfContent"
                    android:layout_below="@+id/txtInclusiveOf"
                    android:text="@string/inclusiveof"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

            <!--Content-->
            <LinearLayout
                android:id="@+id/relContent"
                android:layout_below="@+id/relBody"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtWhattoexpect"
                    android:text="What To Expect"
                    android:textSize="24sp"
                    android:textColor="#500be4"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/contentbody1"
                    android:id="@+id/txtWhattoexpectContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="303dp"
                    android:layout_marginTop="20dp"
                    android:padding="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/universal3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="20dp"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/universal2" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginTop="20dp"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/universal4" />


                <TextView
                    android:id="@+id/txtActivityInfor"
                    android:text="Activity Information"
                    android:textSize="22sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#500be4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Confirmation"
                    android:textSize="20sp"
                    android:textColor="#500be4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/confirmation1"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Itinerary"
                    android:textSize="20sp"
                    android:textColor="#500be4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/itinerary"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:background="#fbfbce"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Additional Information"
                        android:textSize="20sp"
                        android:textColor="#500be4"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/additional_info"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Insider Tips"
                        android:textSize="20sp"
                        android:textColor="#500be4"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/insider"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtReview"
                    android:text="Reviews"
                    android:textColor="#500be4"
                    android:textSize="22sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/lil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="4.8"
                        android:textSize="32sp"
                        android:layout_marginLeft="22dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:id="@+id/imvStar"
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </LinearLayout>


                        <TextView
                            android:text="2769 reviews"
                            android:textSize="22sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>

                </LinearLayout>

                <!--comment reviews-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imvAvatarReview"
                        android:src="@drawable/ic_user"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtNameReview"
                            android:text="Mai Mai"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:src="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtDateReview"
                            android:text="22 Nov 2019"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/txtContentReview"
                            android:text="Great tour. it was beautiful!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnReadAllComment"
                    android:text="Read all Reviews"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_rectangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <!--others-->
            <TextView
                android:id="@+id/txtOtherActivity"
                android:layout_marginTop="20dp"
                android:text="You may also like these"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_below="@+id/relContent"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/txtOtherActivity"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:id="@+id/recyOthersActivities"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>







        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>




    <com.vlstr.fluentappbar.FluentAppBar
        android:id="@+id/fluent_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fluent_background_colour="@color/colorPrimary"
        app:fluent_foreground_colour="@color/white"
        app:fluent_app_bar_type="DISABLE_FLUENT"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    </com.vlstr.fluentappbar.FluentAppBar>





</android.support.design.widget.CoordinatorLayout>