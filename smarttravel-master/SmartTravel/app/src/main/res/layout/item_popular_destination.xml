<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_PopularDetination"
    android:padding="5dp"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        >
        <FrameLayout
            android:background="#812de7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvThumbnailPopularDestination"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />
            <!--android:src="@drawable/roadtrip"-->
            <RelativeLayout
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtTitlePopularDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Viet Name"
                    android:textColor="#f7f5f5"
                    android:textSize="20sp" />

            </RelativeLayout>




        </FrameLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>