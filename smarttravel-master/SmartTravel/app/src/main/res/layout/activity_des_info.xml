<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:background="@drawable/vn"
    android:layout_height="match_parent"
    >
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:id="@+id/tvAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                android:textColor="#ffff"/>
            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viet Nam"
                android:textAllCaps="true"
                android:textSize="25dp"
                android:id="@+id/tvVN"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAbout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:textColor="#ffff"/>
            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't miss:"
                android:textStyle="italic"
                android:id="@+id/tvDontMiss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvVN"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDaLat"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintTop_toBottomOf="@id/tvDontMiss"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="Dalat"/>
            <android.support.v7.widget.AppCompatButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/btnDaLat"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintBaseline_toBaselineOf="@id/btnDaLat"
                android:layout_marginStart="8dp"
                android:text="My Son"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHCM"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintTop_toBottomOf="@id/btnDaLat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="Ho Chi Minh city"/>
            <android.support.v7.widget.AppCompatButton android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintStart_toEndOf="@id/btnHCM"
                app:layout_constraintBaseline_toBaselineOf="@id/btnHCM"
                android:layout_marginStart="8dp"
                android:text="Mekong delta"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vietnam is located on the eastern Indochinese Peninsula between the latitudes 8째 and 24째N, and the longitudes 102째 and 110째E"
                android:textColor="#ffff"
                android:id="@+id/tvDetail"
                app:layout_constraintTop_toBottomOf="@id/btnHCM"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Climate "
                android:textStyle="italic"
                android:id="@+id/tvClimate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetail"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due to differences in latitude and the marked variety in topographical relief, the climate tends to vary considerably for each region. During the winter or dry season, extending roughly from November to April, the monsoon winds usually blow from the northeast along the Chinese coast and across the Gulf of Tonkin, picking up considerable moisture."
                android:textColor="#ffff"
                android:id="@+id/tvClimateDetail"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvClimate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biodiversity "
                android:textStyle="italic"
                android:id="@+id/tvBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvClimateDetail"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As the country is located inside the Indomalayan realm, Vietnam is one of twenty-five countries considered to possess a uniquely high level of biodiversity as also been stated in the country National Environmental Condition Report in 2005."
                android:textColor="#ffff"
                android:id="@+id/tvBioDetail"
                app:layout_constraintTop_toBottomOf="@id/tvBio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>


            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular activities on the map "
                android:textStyle="italic"
                android:id="@+id/tvMap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBioDetail"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>
            <ImageView android:layout_width="match_parent" android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/imgMap"
                app:layout_constraintTop_toBottomOf="@id/tvMap"
                android:layout_margin="16dp"
                android:src="@drawable/map"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Zone"
                android:textStyle="italic"
                android:id="@+id/tvTimeZone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgMap"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GMT +07:00"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:id="@+id/tvTimeZone1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimeZone"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffff"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textStyle="italic"
                android:id="@+id/tvCurrency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimeZone1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VND"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:id="@+id/tvCurrency1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCurrency"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffff"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Time To Visit"
                android:textStyle="italic"
                android:id="@+id/tvBest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCurrency1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#6ff7Bf"/>
            <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan and Dec"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:id="@+id/tvBest1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBest"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffff"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>