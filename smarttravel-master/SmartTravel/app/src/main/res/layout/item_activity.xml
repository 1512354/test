<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="256dp">
        <!--app:cardCornerRadius="20dp"-->
        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtDestination"
                android:layout_marginLeft="32dp"
                android:text="Singapore"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgDestination"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                />
            <!--android:src="@drawable/rsz_1seoul" -->

            <TextView
                android:id="@+id/txtTitle"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Hong Kong Disneyland Meal Coupon"
                android:layout_below="@+id/imgDestination"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#190404"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/imgStar"
                android:src="@drawable/star"
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtTitle"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txtReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="1dp"
                android:text="690 reviews"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtPrice"
                android:text="Ä‘ 569,000"
                android:textSize="18dp"
                android:textColor="#190404"
                android:layout_marginLeft="21dp"
                android:layout_below="@+id/txtReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>